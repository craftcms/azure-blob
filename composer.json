{
  "name": "craftcms/azure-blob",
  "description": "Azure Blob Storage integration for Craft CMS",
  "type": "craft-plugin",
  "keywords": [
    "azure",
    "cms",
    "craftcms",
    "flysystem",
    "yii2"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Pixel & Tonic",
      "homepage": "https://pixelandtonic.com/"
    }
  ],
  "support": {
    "email": "support@craftcms.com",
    "issues": "https://github.com/craftcms/azure-blob/issues?state=open",
    "source": "https://github.com/craftcms/azure-blob",
    "docs": "https://github.com/craftcms/azure-blob/blob/main/README.md",
    "rss": "https://github.com/craftcms/azure-blob/commits/main.atom"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0.2",
    "craftcms/cms": "^4.0.0-alpha.1",
    "craftcms/flysystem": "^1.0.0-beta.2",
    "league/flysystem-azure-blob-storage": "^3.0.5"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main",
    "craftcms/rector": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "craft\\azureblob\\": "src/"
    }
  },
  "extra": {
    "name": "Azure Blob Storage",
    "handle": "azure-blob",
    "documentationUrl": "https://github.com/craftcms/azure-blob/blob/main/README.md"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
